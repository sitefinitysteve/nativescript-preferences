{
	"name": "nativescript-preferences",
	"version": "1.2.0",
	"description": "Allows your app to have native settings support",
	"main": "preferences",
	"typings": "index.d.ts",
	"nativescript": {
		"platforms": {
			"android": "6.0.0",
			"ios": "6.0.1"
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/sitefinitysteve/nativescript-preferences.git"
	},
	"scripts": {
		"tsc": "npm i && tsc",
		"build": "npm run tsc && npm run build.native",
		"build.native": "node scripts/build-native.js",
		"tslint": "cd .. && tslint \"**/*.ts\" --config tslint.json --exclude \"**/node_modules/**\"",
		"ci.tslint": "npm i && tslint '**/*.ts' --config '../tslint.json' --exclude '**/node_modules/**' --exclude '**/platforms/**'",
		"prepack": "npm run build.native",
		"demo.ios": "npm i && cd ../demo && tns run ios",
		"demo.android": "npm i && cd ../demo && tns run android",
		"demo.reset": "cd ../demo && npx rimraf -- hooks node_modules platforms package-lock.json",
		"plugin.prepare": "npm run build && cd ../demo && tns plugin remove nativescript-preferences && tns plugin add ../src",
		"clean": "npm run demo.reset && npx rimraf -- node_modules package-lock.json && npm i"
	},
	"keywords": [
		"NativeScript",
		"Preferences",
		"Settings",
		"PreferenceScreen",
		"JavaScript",
		"Android",
		"iOS"
	],
	"author": {
		"name": "Steve McNiven-Scott",
		"email": "steve@sitefinitysteve.com",
		"url": "https://github.com/sitefinitysteve"
	},
	"bugs": {
		"url": "https://github.com/sitefinitysteve/nativescript-preferences/issues"
	},
	"license": "Apache-2.0",
	"homepage": "https://github.com/sitefinitysteve/nativescript-preferences",
	"devDependencies": {
		"tns-core-modules": "^6.0.0",
		"tns-platform-declarations": "^6.0.0",
		"typescript": "~3.4.5",
		"prompt": "^1.0.0",
		"rimraf": "^2.6.3",
		"tslint": "^5.12.1",
		"semver": "^5.6.0"
	},
	"dependencies": {},
	"bootstrapper": "nativescript-plugin-seed"
}
